<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace가 비어있으면 예외발생 -->
<mapper namespace="com.naver.start.board.notice.NoticeDAO">

	<select id="getList" resultType="NoticeDTO" parameterType="java.util.Map">
		<!-- select num, title, writer, regdate, hit from notice order by num desc -->
		select * from
		(select rownum r, n.* from
		(select * from notice order by num desc) n)
		where r between #{startRow} and #{lastRow}
	</select>

	<select id="getDetail" parameterType="BoardDTO" resultType="NoticeDTO">
		select * from notice where num = #{num}
	</select>

	<insert id="setAdd" parameterType="BoardDTO">
		insert into notice values
		(board_seq.nextval, #{title}, #{writer}, #{contents}, sysdate, 0)
	</insert>

	<update id="setUpdate" parameterType="BoardDTO">
		update notice set
		title = #{title}, contents = #{contents}
		where num = #{num}
	</update>

	<delete id="setDelete" parameterType="BoardDTO">
		delete notice where num = #{num}
	</delete>

	<select id="getCount" resultType="Long">
		select count(num) from notice
	</select>

</mapper>
